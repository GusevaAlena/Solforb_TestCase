@model OrdersViewModel
<div class="row my-5">
    <div class="col-9">
        <form>
            <label>Выбрать заказ в период с </label>
            <input asp-for="MonthAgo" type="date"/>
            <label> по </label>
            <input asp-for="Today" type="date"/>
        </form>
    </div>
    <div class="col-3">
        <a asp-controller="Order" asp-action="Add" class="btn btn-outline-dark">Добавить заказ</a>
    </div>
</div>
<div class="row my-5">
    <div class="col text-center">
        <h3 class="card-title">Список заказов</h3>
        <table class="table table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">№ Заказа</th>
                    <th scope="col">Дата</th>
                    <th scope="col">Поставщик</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Number</td>
                        <td>@order.Date.ToString("d")</td>
                        <td></td>
                        <td>
                            <a asp-controller="" asp-action="" asp-route-orderId="@order.Id">Подробнее</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
