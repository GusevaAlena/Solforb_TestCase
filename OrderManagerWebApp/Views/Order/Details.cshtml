@model OrderViewModel
<div class="row">
    <div class="col">
        <h3>Информация о заказе № @Model.Number</h3>
        <div class="row my-5">
            <div class="col-6">
                <h5>Поставщик: @Model.Provider.Name</h5>
            </div>
            <div class="col-6">
                <h5>Дата заказа: @Model.Date.ToString("d")</h5>
            </div>
        </div>
        <div class="row my-5">
            <div class="col">
                <h5>Позиции в заказе</h5>
                <table class="table table-dark table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Наименование</th>
                            <th scope="col">Количество</th>
                            <th scope="col">Единица измерения</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderItem in Model.OrderItems)
                        {
                            <tr>
                                <td>@orderItem.Name</td>
                                <td>@orderItem.Quantity</td>
                                <td>@orderItem.Unit</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Order" asp-action="Update" asp-route-orderId="@Model.Id" class="btn btn-outline-dark my-5">Редактировать</a>
                <a asp-controller="Order" asp-action="Delete" asp-route-orderId="@Model.Id" class="btn btn-outline-danger my-5">Удалить</a>
            </div>
        </div>
    </div>
</div>
